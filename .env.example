# ---- Auth ----
AUTH_MODE="bearer"         # one of: none | bearer | oidc
TOKENS_JSON='[{"id":"example","token":"CHANGEME"}]'

# OIDC (M2)
OIDC_ISSUER="https://auth.example.com/"
OIDC_AUDIENCE="mcp-devhatchery"
REQUIRE_JWT="false"

# ---- Images / Startup ----
DEFAULT_IMAGE="python:3.12-bookworm"
PREPULL_IMAGES='["python:3.12-bookworm","node:22-bookworm"]'
WARM_POOL_MAP='{"python:3.12-bookworm":1}'
IDLE_TIMEOUT_S="900"

# ---- Persistence ----
PERSISTENT_BY_DEFAULT="true"
APT_CACHE_PERSIST="true"   # enabled in M1.1

# ---- Exports (control-plane path) ----
EXPORT_ROOT="/exports"

# ---- Bind mounts (runner path) ----
ENABLE_HOST_BIND_MOUNTS="true"
ALLOWED_ROOTS_JSON='[{"alias":"exports","path":"/srv/devhatchery/exports","default_mode":"rw"}]'

# ---- Limits ----
MAX_CPU="2.0"
MAX_MEM_MB="8192"
MAX_CONTAINERS_PER_OWNER="6"
